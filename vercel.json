{
  "version": 2,
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/src/index.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "src/index.ts": {
      "maxDuration": 30,
      "regions": ["gru1"]
    }
  },
  "crons": [
    {
      "path": "/api/cron/process-contacts",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/health-check", 
      "schedule": "*/10 * * * *"
    },
    {
      "path": "/api/monday/data",
      "schedule": "0 */1 * * *"
    }
  ]
}
